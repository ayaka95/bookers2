<%= render 'userserror', books: @books %>

<div class="container px-5">
  <div class="row">
    <%= render partial: 'users', locals: { user: @user, books: @books } %>

    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <p><%= link_to "グループ作成", new_group_path %>|グループ一覧</p>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @users.each do |user| %>
            <td>
              <%= image_tag user.get_profile_image(100,100) %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          <% end %>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>