
<%= render 'userserror', books: @books %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render partial: 'users', locals: { user: @user, books: @books } %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>Title</th>
            <th>Option</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
          <% @book.each do |book| %>
            <td>
            <%= link_to user_path(@user) do %>
              <%= image_tag @user.get_profile_image(100,100) %>
            <% end %>
            </td>
            <td>
            <%= link_to book_path(book) do %>
              <%= book.title %>
            <% end %>
            </td>
            <td><%= book.body %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>